{{!< main_layout }}

       <div id="main-content" class="clearfix">
                <div id="breadcrumbs">
                    <ul class="breadcrumb">
                        <li><i class="icon-home"></i> <a href="#">Home</a><span class="divider"><i class="icon-angle-right"></i></span></li>
                        <li class="active">Products</li>
                    </ul><!--.breadcrumb-->
                </div><!--#breadcrumbs-->
                <div id="page-content" class="clearfix">
                    <div class="row-fluid">  
<!-- PAGE CONTENT BEGINS HERE -->

  <div class="button-1">
  <form action="/dashboard/products/new">
  <button class="btn btn-primary" style="margin-left: 37%;" type="submit">Add new product</button>
  </form>
  </div>
<table class="table table-striped table-bordered table-hover table-condensed">
    <tr align="center" style="font-weight:bold">
        <td>Thumbnail</td>
        <td>Name</td>
        <td>Price</td>
        <td>Category</td>
        <td>Status</td>
        <td></td>
    </tr>
   {{#each items}}
        <tr align="center" style="font-weight:bold">
            <td><img width="94" height="71" src="/images/{{thumbnail}}" alt="" border="0" /></td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{categoryName}}</td>
            <td>{{statusID}}</td>
            <td><a href="/dashboard/products/{{_id}}/remove" style="color:red"><i class="icon-remove red"></i> Remove</a><a href="/dashboard/products/item/{{_id}}" style="color: #3f00ff;margin:5%"><i class="icon-edit"></i> Edit</a></td>
        </tr>
   {{/each}}
</table>

                    </div><!--/row-->
                </div><!--/#page-content-->
            </div><!-- #main-content -->

